<div class="user-details">
  <h1>User Details</h1>
  <p>
    <strong>First name:</strong>
    <span class="user-detail"><%= @user.first_name %></span>
  </p>
  <p>
    <strong>Last name:</strong>
    <span class="user-detail"><%= @user.last_name %></span>
  </p>
  <p>
    <strong>Email:</strong>
    <span class="user-detail"><%= @user.email %></span>
  </p>
  <p>
    <strong>Age:</strong>
    <span class="user-detail"><%= @user.age %></span>
  </p>
  <div class="actions">
    <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-primary' %>
    <%= link_to 'Back', users_path, class: 'btn btn-secondary' %>
  </div>
</div>
