<%= form_with(model: @user, local: true, html: { class: 'user-form' }) do |form| %>
    <h2>User Details</h2>
    <div class="form-group">
      <%= form.label :first_name, 'First Name', class: 'form-label' %>
      <%= form.text_field :first_name, class: 'form-control' %>
      <% if @user.errors[:first_name].any? %>
        <div class="error_messages">
          <% @user.errors.full_messages_for(:first_name).each do |message| %>
            <p><%= message %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  
    <div class="form-group">
      <%= form.label :last_name, 'Last Name', class: 'form-label' %>
      <%= form.text_field :last_name, class: 'form-control' %>
      <% if @user.errors[:last_name].any? %>
        <div class="error_messages">
          <% @user.errors.full_messages_for(:last_name).each do |message| %>
            <p><%= message %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  
    <div class="form-group">
      <%= form.label :email, 'Email', class: 'form-label' %>
      <%= form.email_field :email, class: 'form-control' %>
      <% if @user.errors[:email].any? %>
        <div class="error_messages">
          <p><%= @user.errors.full_messages_for(:email).first %></p>
        </div>
      <% end %>
    </div>
  
    <div class="form-group">
      <%= form.label :age, 'Age', class: 'form-label' %>
      <%= form.number_field :age, class: 'form-control' %>
      <% if @user.errors[:age].any? %>
        <div class="error_messages">
          <% @user.errors.full_messages_for(:age).each do |message| %>
            <p><%= message %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  
    <%= form.submit 'Save', class: 'btn btn-primary' %>
    <%= link_to 'Back', users_path, class: 'btn btn-secondary' %>
  <% end %>
  