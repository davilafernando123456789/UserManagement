<h2>List of users</h2>
<%= link_to 'New User', new_user_path, class: "btn btn-primary" %>
<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Age</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.age %></td>
        <td><%= link_to 'Show', user, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-warning" %></td>
        <td>
<%= link_to 'Destroy', user, method: :delete, class: "btn btn-danger destroy-btn", data: { turbo_method: :delete }, onclick: "confirmDelete(event, '#{user_path(user)}');" %>
</td>

      </tr>
    <% end %>
  </tbody>
</table>
